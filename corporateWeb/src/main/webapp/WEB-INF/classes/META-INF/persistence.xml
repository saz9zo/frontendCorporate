<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
             xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

    <persistence-unit name="querycontrol" transaction-type="RESOURCE_LOCAL">

        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>org.mountblue.QueryPojo</class>
        <class>org.mountblue.AdminRegister</class>
        <properties>
            <property name="hibernate.connection.driver_class" value=" org.postgresql.Driver" />
            <property name="hibernate.connection.url" value="jdbc:postgresql://localhost/corpdatabase"/>
            <property name="hibernate.connection.username" value="sakul"/>
            <property name="hibernate.connection.password" value="sakul"/>
            <property name="javax.persistence.schema-generation.database.action" value="update"/>
            <property name="hibernate-dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
         


        </properties>
    </persistence-unit>
</persistence>